        </div>
    </div>
    @if (!String.IsNullOrEmpty(Model.CurrentPage.Address) || (!String.IsNullOrEmpty(Model.CurrentPage.Latitude) && !String.IsNullOrEmpty(Model.CurrentPage.Longitude)))
    {

        if (!String.IsNullOrEmpty(Model.CurrentPage.Latitude) && !String.IsNullOrEmpty(Model.CurrentPage.Longitude))
        {
            <script type="text/javascript">
            function initMap() {
                var marker = { lat: @Model.CurrentPage.Latitude, lng: @Model.CurrentPage.Longitude };
                var map = new google.maps.Map(document.getElementById('karta'), {
                    zoom: 14,
                    center: marker
                });
                var marker = new google.maps.Marker({
                    position: marker,
                    map: map
                });
            }
            </script>
        }
        else
        {

            <script type="text/javascript">

                var geocoder;
                var map;

              function initMap() {
                geocoder = new google.maps.Geocoder();
                var address = "@Model.CurrentPage.Address";
                var latlng = codeAddress(address);
                var myOptions = {
                  zoom: 14,
                  center: latlng,
                  mapTypeId: google.maps.MapTypeId.ROADMAP
                }
                map = new google.maps.Map(document.getElementById("karta"), myOptions);

              }

            function codeAddress(address) {
                geocoder.geocode( { 'address': address}, function(results, status) {
                    if (status == google.maps.GeocoderStatus.OK) {
                        map.setCenter(results[0].geometry.location);
                        var marker = new google.maps.Marker({
                            map: map,
                            position: results[0].geometry.location
                        });
                    } else {
                        //alert("Geocode was not successful for the following reason: " + status);
                        document.getElementById("karta").innerText = "Google maps fel: Angiven adress ger inget resultat";
                    }
                });
            }

            </script>
        }
        <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAAjyKHFCzUbOimsXKcmHLA83ayrTdsOeM&callback=initMap"></script>

    }
