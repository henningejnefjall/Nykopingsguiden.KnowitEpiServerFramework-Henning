                            @if (Model.CurrentPage.Extract != null)
                            {
                                @*<h5>@Html.Raw(Model.Extract.ToHtmlString().Replace("\r\n", "<br/>"))</h5>*@
                                <h5>@Html.PropertyFor(x => x.CurrentPage.Extract, new { CustomTag = "h5" })</h5>

                            }

                            @Html.PropertyFor(x => x.CurrentPage.MainBody)

                            @*@if (Model.MainBody != null)
                            {
