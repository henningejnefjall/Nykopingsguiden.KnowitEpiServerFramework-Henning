                        </div>
                    </main>

            <aside class="side-column">

                <div id="side-tips" class="side-section">

                    <h4>Relaterad information</h4>

                    <div class="side-pushes">
                        
                        @{
                            foreach (CompanyPageModel page in Model.CategoryPages)
                            {
                                @:<a class="main-push @Knowit.EpiserverFramework.Utilities.EpiserverUtilities.Heextensions.CheckPageType(page)" href="@page.LinkURL">
                                    <div class="text">
                                        <div class="meta"><div class="date">(datum)</div><div class="location">@page.Name</div></div>
                                        <div class="box">
                                            <h3>@page.Header</h3>
                                            <div class="more">
                                                <p>
                                                   <!-- 200 tecken -->
                                                   @page.Extract
                                                </p>
                                                <div class="arrow"></div>
                                            </div>

                                        </div>
                                    </div>
                                    
                                        if (page.Image1 != null)
                                        {
                                            <img src="@UrlResolver.Current.GetUrl(page.Image1)" alt="">
                                        }
                                        else
                                        {
                                            var guid = EPiServer.Web.PermanentLinkUtility.GetGuid(Model.CurrentPage.LinkURL);
                                            var image = Knowit.EpiserverFramework.Utilities.EpiserverUtilities.Heextensions.GetCategoryImage(guid);
                                            if (image != null)
                                            {
                                                <img src="@UrlResolver.Current.GetUrl(image)" alt="@Model.CurrentPage.Name">
                                            }
                                            else
                                            {
                                                <img src="noimage.jpg" alt="@Model.CurrentPage.Name">
                                            }
                                        }
                                    

                                @:</a>
                            }

                        }
                    </div>
                    @{ 
                        @*<p>
                            Time: @ViewBag.TheTime
                        </p>
                        <p>Antal pages:
                            @ViewBag.Temppages
                        </p>*@
                        @*foreach(var page in Model.CategoryPages)
                        {
                            @page.Name
                        }*@
                    }

            </div>
        </aside>




                        </div>
